.ico
    sq: 1em
    line-height: 1
    overflow: hidden

.ico--
    &base
        +o-attr(breakpoints)
            svg&
            > .ico
                sq: 1em

    &xs
        +o-attr(breakpoints)
            svg&
            > .ico
                sq: .75em

    &s
        +o-attr(breakpoints)
            svg&
            > .ico
                sq: 1.5em

    &md
        +o-attr(breakpoints)
            svg&
            > .ico
                sq: 1.75em

    &l
        +o-attr(breakpoints)
            svg&
            > .ico
                sq: 2em

    &xl
        +o-attr(breakpoints)
            svg&
            > .ico
                sq: 2.5em
