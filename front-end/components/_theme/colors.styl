.co--
    &affiliates
        color: co.affiliates
    
    &partners
        color: co.partners
    
    &programs
        color: co.programs

    &pri
        color: co.brand_1.base

        &.fx--shift
            &:--hover
                color: co.brand_2.base
            
            &:--active
                color: co.black
    &minor
        color:  co.neutral.base

        &.fx--shift
            &:--hover
                color: co.brand_2.base
            
            &:--active
                color: co.black

    &ctrl
        color: co.brand_2.base

        &.fx--shift
            &:--hover
                filter: brightness(130%)
    
    &copy
        color: co.copy.base
