// Dimensions
// -------------------------------------------------------------
.dx--
    &xFull
        +o-eq(breakpoints)
            max-content-width: config.max_site_width, bvr(2)

    &w60
        +o-eq(breakpoints)
            max-width: 60vw
            width: 60%

    &w75
        +o-eq(breakpoints)
            max-width: 75vw
            width: 75%

    &w80
        +o-eq(breakpoints)
            max-width: 80vw
            width: 80%

    &w90
        +o-eq(breakpoints)
            max-width: 90vw
            width: 90%

    &w100
        +o-eq(breakpoints)
            max-width: 100vw
            width: 100%
    
    
// Generalized Grids
// -------------------------------------------------------------        
.gx--
    +o-attr(breakpoints)
        +grid()
            display: grid
            grid-gap: 0
            grid-template-rows: auto    
            // grid-auto-rows: 1fr
    
    &i1
        +o-attr(breakpoints)
            grid-gap: 1px
            grid-template-columns: 1fr

    &i2
        +o-attr(breakpoints)
            grid-gap: 1px
            grid-template-columns: repeat(2, 1fr)

    &i3
        +o-attr(breakpoints)
            grid-gap: 1px
            grid-template-columns: repeat(3, 1fr)
    
    &i4
        +o-attr(breakpoints)
            grid-gap: 1px
            grid-template-columns: repeat(4, 1fr)

.--
    &gxy0
        +o-attr(breakpoints)
            grid-gap: 0
    &gxy25
        +o-attr(breakpoints)
            grid-gap: bvr(.25)
    &gxy50
        +o-attr(breakpoints)
            grid-gap: bvr(.5)
    &gxy100
        +o-attr(breakpoints)
            grid-gap: bvr(1)

.sgx--
    +o-attr(breakpoints)
        +grid()
            display: subgrid
    
// Generalized Grid Items
// -------------------------------------------------------------          
.gxi--

    &a
        +o-attr(breakpoints)
            grid-area: a
        
    &b
        +o-attr(breakpoints)
            grid-area: b

    &c
        +o-attr(breakpoints)
            grid-area: c
    
    &d
        +o-attr(breakpoints)
            grid-area: d

    &e
        +o-attr(breakpoints)
            grid-area: e

    &f
        +o-attr(breakpoints)
            grid-area: f
    
    &g
        +o-attr(breakpoints)
            grid-area: g


.gxs--    
    &s2
        +o-attr(breakpoints)
            grid-area: span 1 / span 2
