// Generalized Grids
// -------------------------------------------------------------        
.gx--
    +o-attr(breakpoints)
        +grid()
            display: grid
            grid-gap: 0
            grid-template-rows: max-content

    &i1
        +o-attr(breakpoints)
            grid-template-columns: 1fr

    &i2
        +o-attr(breakpoints)
            grid-template-columns: repeat(2, minmax(0, 1fr))

    &i3
        +o-attr(breakpoints)
            grid-template-columns: repeat(3, minmax(0, 1fr))
    
    &i4
        +o-attr(breakpoints)
            grid-template-columns: repeat(4, minmax(0, 1fr))

.--
    &gxy
        +o-attr(breakpoints)
            grid-gap: 1px

    &gxy0
        +o-attr(breakpoints)
            grid-gap: 0
    &gxy10
        +o-attr(breakpoints)
            grid-gap: bvr(.125)

    &gxy25
        +o-attr(breakpoints)
            grid-gap: bvr(.25)

    &gxy50
        +o-attr(breakpoints)
            grid-gap: bvr(.5)

    &gxy100
        +o-attr(breakpoints)
            grid-gap: bvr(1)
    
    &gxy150
        +o-attr(breakpoints)
            grid-gap: bvr(1.5)

    &gxy200
        +o-attr(breakpoints)
            grid-gap: bvr(2)


.--
    &gsMiddle
        +o-attr(breakpoints)
            align-content: center
    


// Generalized Grid Items
// -------------------------------------------------------------          
.gxi--

    &a
        +o-attr(breakpoints)
            grid-area: a
        
    &b
        +o-attr(breakpoints)
            grid-area: b

    &c
        +o-attr(breakpoints)
            grid-area: c
    
    &d
        +o-attr(breakpoints)
            grid-area: d

    &e
        +o-attr(breakpoints)
            grid-area: e

    &f
        +o-attr(breakpoints)
            grid-area: f
    
    &g
        +o-attr(breakpoints)
            grid-area: g


.gxs--
    &s2
        +o-attr(breakpoints)
            grid-area: span 1 / span 2
    
    &s3
        +o-attr(breakpoints)
            grid-area: span 1 / span 3
    
    &s4
        +o-attr(breakpoints)
            grid-area: span 1 / span 4
