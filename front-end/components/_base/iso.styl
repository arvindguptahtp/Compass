.iso--
    
    // X values
    &x
        +o-eq(breakpoints)
            margin-x: 1px

        &Auto
            +o-eq(breakpoints)
                margin-x: auto

        for i in (0 10 25 50 75 100 125 150 175 200 250 300 350 400)
            if i is 0        
                num = 0
            else
                num = i/100
            
            &{i}
                +o-eq(breakpoints)
                    margin-x: bvr(num)

    
    
