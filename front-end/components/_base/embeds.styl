.embed--
    +o-attr(breakpoints)
        position: relative
        overflow: hidden
        padding: 0
        
        &::after
            content: ''
            display: block
            height: 0
            padding-bottom: 100%


    &img
        +o-eq(breakpoints)
            > img
                object-fit: cover

