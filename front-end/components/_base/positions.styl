.pos--
    &rel
        +o-attr(breakpoints)
            position: relative

    &abs
        +o-attr(breakpoints)
            position: absolute
        &--xy
            +o-attr(breakpoints)
                top: 0
                bottom: 0
                right: 0
                left: 0
    &fix
        +o-attr(breakpoints)
            position: fixed
            
    &nil
        +o-attr(breakpoints)
            position: static
            float: none
    




.ord--
    &init
        +o-eq(breakpoints)
            order: -1
            
    &flow
        +o-eq(breakpoints)
            order: initial

    &start
        +o-eq(breakpoints)
            order: 0
    &next
        +o-eq(breakpoints)
            order: 1
    &end
        +o-eq(breakpoints)
            order: 100
