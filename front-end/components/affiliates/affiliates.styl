.gx--detail-affiliate
    grid-template-columns: 1fr
    grid-template-areas: 
        "a" \
        "b" \
        "c"
    
    +over(standard)
        grid-template-columns: repeat(3, 1fr)
        grid-template-areas: 
            "b a a" \
            "c c c"

    +over(full)
        grid-template-columns: 1fr 2fr
        grid-template-areas: 
            "a b" \
            "c c"

.gx--result-affiliate
    grid-template-areas:
        "title      title       title   title" \
        "state      state       state   profile" \
        "students   students    budget  budget"
    grid-template-columns: repeat(3, 1fr) max-content
    grid-template-rows: repeat(4, auto)
    grid-gap: 1px
    
    +over(condensed)
        grid-template-areas:
            "title title title title profile" \
            "state students students budget budget"
        grid-template-columns: repeat(5, 1fr)

    +over(extended)
        grid-template-areas:
            "title title title title profile" \
            "state state state students budget"
        grid-template-columns: repeat(5, 1fr)
        grid-gap: 3px
