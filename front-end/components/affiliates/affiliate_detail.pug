prepend preview
    -
        poster = new Vefa()
            .mix({
                element: {
                    class: "co--affiliates",
                }
            })
            .data({
                contact: {
                    url: page.data.website,
                    location: page.data.location,
                    state: page.data.state
                }
            })


block view
    .strata--detail.gx--detail-affiliate(
        o-base="mod--balance"
    )
       
        section.thm--affiliates.gxi--a(
            o-base="pad--x25 pad--yEnd100 hy--yStart"
            o-condensed="pad--yEnd25"
            o-standard="pad--xy50"
            o-enhanced="pad--x50"
        )
            header.tx--subhed--f1--100--aa(
                o-base="pad--x25 pad--y25"
                o-condensed="pad--x50"
            )
                h2 Affiliate Details
            
            h3.tx--small--f3--900--aa.thm--shade60(
                o-base="pad--xy25 iso--yEnd"
                o-condensed="pad--x50"
            ) Affiliate Resources
            dl(
                o-base="iso--yEnd"
            )
                dt.thm--shade40.tx--small--f3--tcU(
                    o-base="pad--xy25"
                ) Executive Director
                dd.thm--shade20.tx--small--f3(
                    o-base="col--pStart--sStart pad--xy25"
                )
                    p= v('affiliate.current_data.executive_director_name')
                    a(
                        href=`mailto:${v('affiliate.current_data.executive_director_email')}`
                    )
                        = v('affiliate.current_data.executive_director_email')

                dt.thm--shade40.tx--small--f3--tcU(
                    o-base="pad--xy25"
                ) Program Lead
                dd.thm--shade20.tx--small--f3(
                    o-base="col--pStart--sStart pad--xy25"
                )
                    p= v('affiliate.current_data.program_lead_name')
                    a.fx--shift(
                        href=`mailto:${v('affiliate.current_data.program_lead_email')}`
                    )
                        = v('affiliate.current_data.program_lead_email')

            h3.tx--small--f3--900--aa.thm--shade60(
                o-base="pad--xy25 iso--yEnd"
                o-condensed="pad--x50"
            ) School Districts
            dl(
                o-base="gx--i2 iso--yEnd"
                o-standard="gx--i1"
                o-enhanced="gx--i2"
            )
        
        .detail-copy.gxi--b(
            o-base="pad--yEnd50 rhy--yStart50"
            o-condensed="pad--x50 pad--y50"
            o-extended="gx--i2--gxy100 rhy--yStart0"
        )
