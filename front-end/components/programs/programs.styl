.gx--result-programs
    grid-template-areas:
        "title      title       title" \
        "network    network     services" \
        "overview   overview    services" \
        "ebr        ebr         services"
    grid-template-columns: max-content 1fr max-content
    grid-gap: 1px
    
    +over(compressed)
        grid-template-areas:
            "title      title       network" \
            "ebr        overview    overview" \
            "services   services    services"
        grid-template-columns: minmax(100px, 180px) 2fr minmax(0, max-content)
        grid-template-rows: auto auto 1fr

    +over(condensed)
        grid-template-areas:
            "title      title       network" \
            "ebr        overview    overview" \
            "ebr        services    services"
