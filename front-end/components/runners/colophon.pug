footer.colophon.tx--f3--100.thm--dark(
    role="contentinfo"
    o-base="pad--x50 pad--y100 rhy--yStart100 ord--end"
    o-standard="row--pGrid--sTop rhy--xStart100"
    o-enhanced="pad--x100"
    o-full="gxi--f pad--y200"
)
    a.colophon-brand(
        href="/"
        o-base="mod--static pad--yEnd50 iso--yEnd50 z--masthead"
    )   
        picture
            source(
                data-srcset=static("res/logo.full.inverse.png.webp")
                type="image/webp"
            )
            img.site-logo.lazyload(
                data-src=static("res/logo.full.inverse.png")
                src="data:image/gif;base64,R0lGODlhAQABAAAAACH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="
            )

    .colophon-site(
        o-base="mod--balance"
        o-standard="col---pStart--sEnd"
    )
        nav.colophon-nav.hl--yEnd--bTint(
            o-base="pad--yEnd50 iso--yEnd50 gx--colophon"
            o-standard="row--pEnd--sMiddle--xAuto"
        )
            each instance in nav.colophon
                include /navigation/nav-item--static
                    -
                        vefa
                            .data({
                                route: instance
                            })
                            .dom_mix({
                                element: {
                                    class: "colophon-nav-item",
                                },
                                control: {
                                    class: "colophon-nav-ctrl co--ctrl fx--shift",
                                }
                            })

        
        - contact = site.org;
        address.contactinfo--inline(
            o-condensed="rhy--yStart25"
        )
            .contactinfo-group(
                o-base="col--pStart"
                o-condensed="row--pEnd"
            )
                h5.contactinfo-item--name
                    = contact.name

                    a(
                        href="https://plus.google.com/113213116668578078182"
                        rel="publisher"
                    )   

                .contactinfo-item--address(
                    o-condensed="pad--xStart25 iso--xStart25 hl--xStart--bTint"
                ).
                    #{ contact.address.street_1 }, #{ contact.address.street_2 }
                    #{ contact.address.city }, #{ contact.address.state } #{ contact.address.zip }
        
            .contactinfo-group(
                o-base="col--pStart"
                o-condensed="row--pEnd"
            )
                a.contactinfo-item--email(
                    href=`mailto:${ contact.email }?subject=CIS Compass Inquiry`
                    target="_top"
                ).
                    Questions? Reach out here.

                