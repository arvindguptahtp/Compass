include /_vefa

-
    form = form || new Vefa()
    
    form
        .define({
            class: "fm",
            action: ".",
            method: "GET",
            element: {
                "o-base": "pad--y50 rhy--yStart100",
                "o-enhanced": "pad--y100"
            },
            header: {
                "o-base": "row--pGrid--sMiddle pad--x25",
                "o-standard": "pad--x100"
            },
            hed: {
                class: 'tx--subhed--f1--100'
            }, 
            footer: {
                "o-base": "row--pEnd--sMiddle pad--x50",
                "o-standard": "pad--x100"
            },
            field: {
                label: {
                    class: "tx--small--f3--900--tcU--aa",
                },
                field: {
                    class: "tx--small--f3--ls100--aa rhy--xStart50 hl--xy--bShade thm--tint20 rxn--shade20 fx--shift ico--xl",
                    "o-base": "row--pGrid--sMiddle pad--x50 pad--y25 rhy--xStart25",
                    "o-standard": "pad--y50"
                }
            }
        })
        .data({
            submit: {
                name: "submit",
                label: "Submit"
            }
        })


block model
- form = form.$freeze()



block view
    form(
        action=form.action
        method=form.method
        class=form.class
    )&attributes(form.element)
        
        +csrf()
        
        block hdr
            header.fm-hdr&attributes(form.header)
                h1.fm-hed&attributes(form.hed)
                    = form.data.title
        
        
        block bd
            if form.data.fieldsets
                for fieldset, index in form.data.fieldsets
                    include fields/fm-fieldset

        
        block ftr
            footer&attributes(form.footer)
                -
                    ctrl = new Vefa()
                        .data(form.data.submit)
                include /controls/submit

- form = form.$thaw()
