include /_vefa
-
    form_field = new Vefa()

    if (form && form.field) {
        form_field
            .mix(form.field)
    }

    if (field) {
        form_field
            .data(field)
    }

block model
- form_field = form_field.$freeze()



block view
    div(
        class=form_field.class
    )&attributes(form_field.element)
        
        block hdr
            label(
                for=`id_${ form_field.data.name }_${ index }`
            )&attributes(form_field.label)
                = form_field.data.label
            
        
        block bd
        
        block help_msg

        block error_msg

        block ftr



- form_field = form_field.$thaw()
