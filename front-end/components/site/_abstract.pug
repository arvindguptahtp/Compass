include /_vefa

+load("static choice_tags humanize network_search_tags")
-
    page = new Vefa()
        .define({
            title: false,
            icon: false
        })

//- override view oriented values
block props


- page = page.$freeze()

doctype html
html(langs="en-US")
    head
        meta(charset="utf-8")                
        meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
        meta(name="viewport", content="width=device-width, initial-scale=1.0, shrink-to-fit=no")
        
        title
            = (page && page.data.title) ? `${ v(page.data.title) } : ` : ""
            = site.title
        
        block project_css
            +include('meta/css')
        

        block head_js
            +include('meta/head_js')
        
        include /meta/favicons
        meta(name="apple-mobile-web-app-title" content=site.title)
        meta(name="application-name" content=site.title)
        meta(name="theme-color" content="#ff√•ffff")

        block metatags

        //- Disable automatic detection and formatting of possible phone numbers
        meta(name="format-detection", content="telephone=no")

    body(
        o-base="col--pStart"
        o-full="gx--ui"
        dir="ltr" 
        ontouchstart=""
        onmouseover=""
    )
        block wrapper
            block masthead
                include /runners/masthead--logo-full

            
            block preview
                include /posters/text

            block main
                main(
                    o-base="col--pStart"
                    o-extended="gxi--d"
                )
                    block view

            block postview

            block navigation
                include /runners/masthead--nav

            block colophon
                include /runners/colophon

        
        block js
            +include('meta/footer_js')
