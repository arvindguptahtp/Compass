// Generalized Grids


// X Axis grid
.gdx--
    +o-attr(breakpoints)
        +grid()
            display: grid
            grid-gap: 0
            grid-auto-flow: row
            grid-template-rows: max-content

    &dense
        +o-attr(breakpoints)
            +grid()
                grid-auto-flow: row dense



// Y axis grid
.gdy--
    +o-attr(breakpoints)
        +grid()
            display: grid
            grid-gap: 0
            grid-auto-flow: column

    &dense
        +o-attr(breakpoints)
            +grid()
                grid-auto-flow: column dense



.--g
    // column set up
    &x
        &Auto
            +o-attr(breakpoints)
                grid-template-columns: repeat(auto-fill, 1fr)

        for i in (1..12)
            &i{i}
                +o-attr(breakpoints)
                    if i is 1
                        grid-template-columns: 1fr
                    else
                        grid-template-columns: repeat(i, 1fr)
        
        

    // row set up
    &y
        &Auto
            +o-attr(breakpoints)
                grid-template-rows: repeat(auto-fill, 1fr)

        for i in (1..12)
            &i{i}
                +o-attr(breakpoints)
                    if i is 1
                        grid-template-rows: 1fr
                    else
                        grid-template-rows: repeat(i, 1fr)
        
    
    // grid-gap set up
    &xy
        +o-attr(breakpoints)
            grid-gap: 1px

        for i in (0 10 25 50 75 100 125 150 175 200 225 250)
            &{i}
                if i is 0        
                    num = 0
                else if i is 10
                    num = .125
                else
                    num = i/100
                
                +o-attr(breakpoints)
                    grid-gap: bvr(num)

    
