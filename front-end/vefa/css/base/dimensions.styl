.--txy
    // Text-relative
    for i in (0..16)
        num = (i is 0) ? 0 : i * 25
        
        &{num}
            +o-attr(breakpoints)
                sq: num * .01em


// Aspect Ratios
.--ar
    +o-attr(breakpoints)
        position: relative
        overflow: hidden
        padding: 0
        
        &::after
            content: ''
            display: block
            height: 0
            padding-bottom: calc(100% / var(--aspect-ratio))

        > img
            object-fit: cover

    &1x3
        +o-attr(breakpoints)
            --aspect-ratio: 1/3
    &3x1
        +o-attr(breakpoints)
            --aspect-ratio: 3/1
    &3x4
