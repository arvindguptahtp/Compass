// Dimensions
// namespace: dxn
:root
    --aspect-ratio: 1


// Vertical Rhythm
.--dx    
    &Full
        +o-attr(breakpoints)
            max-content-width: config.max_site_width, bvr(2)
    
    for i in (0..16)
        num = (i is 0) ? 0 : i * 25
        
        &{i}
            +o-attr(breakpoints)
                width: bvr(num)


// Viewport Width
.--vx
    for i in (1..20)
        num = 5 * i
        
        &{num}
            +o-attr(breakpoints)
                max-width: '%svw' % num
                width: '%s%' % num

        if num == 30
            &33
                +o-attr(breakpoints)
                    max-width: 33vw
                    width: 33%

        if num == 65
            &66
                +o-attr(breakpoints)
                    max-width: 66vw
                    width: 66%

    
    
