iso_limit = 0 10 25 50 75 100 125 150 175 200 250 300 350 400

  
.iso--
    // X values
    &x
        +o-eq(breakpoints)
            margin-x: 1px

        &Auto
            +o-eq(breakpoints)
                margin-x: auto

        for i in (iso_limit)
            num = (i is 0) ? 0 : i/100
            
            &{i}
                +o-eq(breakpoints)
                    margin-x: bvr(num)



    // X Start values (left)
    &xStart
        +o-eq(breakpoints)
            margin-left: 1px

